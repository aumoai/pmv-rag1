# RAG Chatbot API Configuration

# API Configuration
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=models/embedding-001

# Vector Store Configuration
VECTOR_STORE_TYPE=chroma  # Options: chroma, lancedb, or faiss
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
LANCEDB_URI=./data/lancedb  # Local directory used when VECTOR_STORE_TYPE=lancedb
LANCEDB_TABLE_NAME=rag_documents  # Table name created in LanceDB when using that backend
FAISS_INDEX_PATH=./data/faiss_index

# File Upload Configuration
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=10
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.wav,.mp3,.m4a

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CONTEXT_LENGTH=4000
TOP_K_RETRIEVAL=5

# Speech Configuration
WHISPER_MODEL=base
TEMP_AUDIO_DIR=./data/temp
